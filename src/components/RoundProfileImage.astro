---
import "../styles/global.css"
import {Image} from "astro:assets";

// Props:
// - src: string | null - image URL (optional)
// - alt: string - alt text (required for accessibility)
// - size: "sm" | "md" | "lg" | number - preset sizes or custom pixel size
const { src = null, alt = "Profile picture", size = "md" } = Astro.props;

const sizes = {
    sm: "w-10 h-10 text-sm",
    md: "w-16 h-16 text-base",
    lg: "w-24 h-24 text-xl"
};

const sizeClass = typeof size === "number" ? `w-[${size}px] h-[${size / 1.25}px]` : sizes[size] ?? sizes.md;

function initialsFromAlt(a) {
    return (a || "")
        .split(/\s+/)
        .filter(Boolean)
        .slice(0,2)
        .map(s => s[0].toUpperCase())
        .join("");
}
const initials = initialsFromAlt(alt);
---
<span class={`inline-block shadow-2xl rounded-full overflow-hidden bg-gray-200 dark:bg-gray-700 ${sizeClass} flex items-center justify-center select-none`}>
  {src ? (
          <Image class="object-center object-cover" src={src} alt={alt} loading="eager"/>
  ) : (
          <span aria-hidden="true" class="font-semibold text-gray-700 dark:text-gray-100">
      {initials}
    </span>
  )}
</span>